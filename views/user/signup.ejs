<% layout("/layouts/boilerplate") %>

<h3 class="col-6 offset-3 mt-3">SignUp on Wanderlust</h3>
<div class="row mt-3">
    <div class="col-6 offset-3">
            <form class="needs-validation" novalidate action="/signup" method="POST">

                 <!-- username -->
                 <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" id="username" placeholder="enter username" type="text" class="form-control"
                        required>
                <p class="valid-feedback">Looks good!</p>
                </div>

                <!-- email -->
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name="email" id="email" placeholder="enter your email" type="email" class="form-control"
                        required>
                </div>

                 <!-- password -->
                 <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" id="password" placeholder="enter your password" type="password" class="form-control"
                        required>
                </div>

                <button class="primary-btn col-6 offset-3">Sign Up</button>

            </form>
    </div>
</div>